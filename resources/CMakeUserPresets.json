{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 16
    },
    "buildPresets": [
        {
            "name": "gcc-release",
            "displayName": "GCC - Release build",
            "description": "Build for production",
            "configurePreset": "gcc-default",
            "configuration": "Release",
            "targets": [
                "all",
                "main",
                "CodeCoverage"
            ],
            "jobs": 14
        },
        {
            "name": "gcc-debug",
            "displayName": "GCC - Debug build",
            "description": "Build for debug mode",
            "configurePreset": "gcc-developer",
            "configuration": "Debug",
            "targets": [
                "all",
                "main",
                "CodeCoverage"
            ],
            "jobs": 14
        },
        {
            "name": "clang-release",
            "displayName": "Clang - Release build",
            "description": "Build for production",
            "configurePreset": "clang-production",
            "configuration": "Release",
            "targets": [
                "all",
                "main",
                "CodeCoverage"
            ],
            "jobs": 14
        },
        {
            "name": "clang-debug",
            "displayName": "Clang - Debug build",
            "description": "Build for debug mode",
            "configurePreset": "clang-developer",
            "configuration": "Debug",
            "targets": [
                "all",
                "main",
                "CodeCoverage"
            ],
            "jobs": 14
        }
    ]
}